{
    "name": "news-extension",
    "version": "0.0.1",
    "description": "lorem ipsum",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "page_action": {
        "default_popup": "popup/popup.html"
    },
    "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["article_content_script.js"]
        }
    ]

}